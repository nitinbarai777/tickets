<div class="row mt centered">
	<div class="col-lg-6 col-lg-offset-3">
		<h1>
			Ticket Replies
		</h1>
	</div>
</div>
<div class="col-lg-12">

<fieldset class="scheduler-border">
    <legend class="scheduler-border"><%= @ticket.subject %></legend>
	  	<p><%= @ticket.description.html_safe if @ticket.description %></p>    
</fieldset>  	

	  	
	
<fieldset class="scheduler-border">
    <legend class="scheduler-border">Conversation</legend>
	  <div id="ticket-replies-list">
	    <%= render partial: 'ticket_reply_list' %>
	  </div>
</fieldset>


<fieldset class="scheduler-border">
    <legend class="scheduler-border">Reply</legend>
	  <%= render partial: 'ticket_reply_form' %> 
</fieldset>
	</div>  


<script type="text/javascript">
	$(document).ready(function(){
		$("#ticket_reply_description").focus();
	});	
</script>


