<table class="table table-striped">
 <thead>
  <tr>
    <th width="20%"><%= t("name") %></th>
    <th width="20%"><%= t("ticket subject") %></th>
    <th width="15%"><%= t("general.date")%></th>
    <th width="10%"><%= t("general.active") %></th>
    <th width="15%"><%= t("general.actions") %></th>
  </tr>
 </thead>

  <tbody>
    <% if @tickets.size > 0 %>
      <% @tickets.each do |o_row| %>
        <tr>
          <td><%= o_row.user.name %></td>
          <td><%= o_row.subject %></td>
          <td><%= o_row.created_at.to_s(:pretty_view) if o_row.created_at %></td>
          <td><%= o_row.is_active ? image_tag("Yes.gif") : image_tag("No.gif") %></td>
          <td>
            <%= link_to t('general.reply'), reply_ticket_path(o_row.id), :class => 'btn btn-mini' %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr><th colspan="6"><%= t("general.record_not_found") %></th></tr>
    <% end %>
  </tbody>
</table>
<div class="fr">
	<table>
		<tr>
            <td><%#= render 'layouts/common_pager' %></td>
			<td>
