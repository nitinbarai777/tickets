<%- model_class = Ticket -%>

<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>

<div class="row mt centered">
	<div class="col-lg-6 col-lg-offset-3">
		<h1>
	  	<%=t '.title', :default => model_class.model_name.human.pluralize.titleize %> (<span id="count_records"><%= @tickets.count %></span>)
			<div class="searchRight fr">
				<%= link_to t("general.search"), "javascript:void(0)", :class => 'btn btn-warning btn-lg', 'id' => 'search_button' %>&nbsp;
			</div>			
		</h1>
	</div>
</div>

<div class="col-lg-12">
	<div id="div_update_search">
	  <% params[:model] = controller_name.classify %>
	  <%= render "search" %>
	</div>
	
	<div id="div_update">
		<%= render "fetchAll" %>
	</div>
</div>

