<div class="row-fluid show-grid">
  <div class="span12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4>New Account</h4>
        </div>
        <div class="panel-body">
				  <h2><%= @ticket.subject %></h2>
				  <p><%= @ticket.description.html_safe if @ticket.description %></p>
	      	<% if @ticket.attached_file.present? %>
	      		<br />
	      		<p><%= link_to @ticket.attached_file.path.split("/").last, download_path(@ticket.id, 'ticket'), :style => 'text-decoration: underline; color:#000;' %></p>
	      	<% end %>				  
				</div>	  	
			</div>	
	  
	  <div id="ticket-replies-list">
	    <%= render partial: 'ticket_reply_list' %>
	  </div>
	  <div class='clearb'></div>
	  <%= render partial: 'ticket_reply_form' %> 
 	</div> 
</div>


