<%= fields_for :user do |user_fields| %>

  <div class="field">
    <%= user_fields.label t("general.name") %>
    <%= user_fields.text_field :first_name, :class => 'input-xxlarge' %>
  </div>

  <div class="field">
    <%= user_fields.label :email %>
    <%= user_fields.text_field :email, :class => 'input-xxlarge' %>
  </div>
<% end %>
