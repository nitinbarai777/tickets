<h3>Ticket Reply</h3>

<% if @ticket_replies.count > 0 %>
  <% @ticket_replies.each do |t| %>

      <div class=""><%= t.description %></div>
      <div class="fl"><%= t.user.name.humanize %></div>
      <div class="fr"><%= t.created_at.to_s(:pretty_view) %></div>
   
    <div class="clearb">&nbsp;</div>
  <% end %>
<% end %>
