<h3>Ticket Replies</h3>

<table class="table table-striped">
  <% if @ticket_replies.count > 0 %>
	    <% @ticket_replies.each do |t| %>
			  <tr>
				  <td>
	        	<div class="fr"><%= t.user.name.humanize %> - <%= t.created_at.to_s(:default_date_time) %></div>
	        	<div class="cl">&nbsp;</div>
	        	<p><%= t.description %></p>
	        </td>
	     </tr>
	    <% end %>
  <% else %>
    <tr>
      <td><%= t('general.record_not_found') %></td>
    </tr>
  <% end %>
</table>
