<%- model_class = Ticket -%>

<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>


<div class="row mt centered">
	<div class="col-lg-6 col-lg-offset-3">
		<h1>
		  <%=t '.title', :default => model_class.model_name.human.pluralize.titleize %> (<span id="count_records"><%= @o_all.count %></span>)
			<div class="searchRight fr">
				<%= link_to t("general.search"), "javascript:void(0)", :class => 'btn btn-primary btn-small', 'id' => 'search_button' %>&nbsp;
		    <%= link_to t('general.destroy'), "#destroy_all", :id => "destroy_all", :class => 'btn btn-danger btn-small' %>
			</div>
		</h1>
	</div>
</div>

<div class="col-lg-12">
	<div id="div_update_search">
	  <% params[:model] = "Ticket" %>
	  <%= render "search" %>
	</div>
	
	<div id="div_update">
		<%= render "fetchAll" %>
	</div>
</div>	

