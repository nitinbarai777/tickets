<div class="row mt centered">
	<div class="col-lg-6 col-lg-offset-3">
		<h1>
			<%= t("general.profile") %>
		</h1>
	</div>
</div>
<div class="col-lg-12">
	<%= form_for @o_single, :url => profile_path, :html => { :class => 'form-inline' } do |f| %>
	    <div class="control-group">
	      <%= f.label :first_name, :class => 'control-label' %><span class="redStart">&nbsp;</span>
	      <div class="form-group">
	        <%= f.text_field :first_name, :class => 'form-control' %>
	      </div>
	    </div>		
			
	    <div class="control-group">
	      <%= f.label :last_name, :class => 'control-label' %><span class="redStart">&nbsp;</span>
	      <div class="form-group">
	        <%= f.text_field :last_name, :class => 'form-control' %>
	      </div>
	    </div>
	    
	    <div class="control-group">
	      <%= f.label :email, :class => 'control-label' %><span class="redStart">*</span>
	      <div class="form-group">
	        <%= f.text_field :email, :class => 'form-control' %>
	       	<% if @o_single.errors[:email].any? %>
	        	<span class="text-error text-message"><%= @o_single.errors[:email].first %></span>
	      	<% end %>        
	      </div>
	    </div>
	    
	    <div class="control-group">
	      <%= f.label :birth_date, :class => 'control-label' %><span class="redStart">&nbsp;</span>
	      <div id="user_birth_date" class="form-group">
			<%= f.text_field :birth_date, :class => 'form-control' %>
	        <span class="add-on">
	            <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
	        </span> 				
		  </div>	   
	    </div>
			 
	    <div class="control-group">
	        <%= f.label :image, :class => 'control-label' %><span class="redStart">&nbsp;</span>
	        <div class="form-group">
	            <%= f.file_field :image, :class => 'form-control' %>
	        </div>
	    </div>
	    <% if @o_single.image? %>
	        <div class="control-group">
	          <div class="form-group">
	            <%= image_tag @o_single.image, { width: 100, height: 100} %>
	          </div>
	        </div>
	    <% end %>
	    
	    
		    <div class="control-group form-action">
		    	<label class='control-label'>&nbsp;</label>
		    	<div class="form-group">
	          <%= f.submit t("general.save"), :class => 'btn btn-warning btn-lg' %>
	          <%= link_to t("general.cancel"), dashboard_url, :class => 'btn btn-warning btn-lg' %>	      	
		      </div>	
		    </div>    
	    
	<% end %>

</div>
<script type="text/javascript">

$('#user_birth_date').datetimepicker({
    language: 'en',
    format: "dd/MM/yyyy"
  });

</script>  
