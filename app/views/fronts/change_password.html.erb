
<div class="row mt centered">
	<div class="col-lg-6 col-lg-offset-3">
		<h1>
			<%= t("general.change_password") %>
		</h1>
	</div>
</div>
<div class="col-lg-12">

	<%= form_for @o_single, :url => change_password_path, :html => { :class => 'form-inline' } do |f| %>
		<div class="control-group <%= @o_single.errors[:password].any? ? 'error' : '' %>">
					<%= f.label :password, :class => 'control-label' %><span class="redStart">*</span>
	        <div class="form-group">
	            <%= f.password_field :password, :class => 'form-control', :placeholder => t("general.password") %>
	       		<% if @o_single.errors[:password].any? %>
	        		<span class="help-inline"><%= @o_single.errors[:password].first %></span>
	      		<% end %>
	        </div>
	    </div>
		<div class="control-group <%= @o_single.errors[:password_confirmation].any? ? 'error' : '' %>">
					<%= f.label :password_confirmation, :class => 'control-label' %><span class="redStart">*</span>
	        <div class="form-group">
	            <%= f.password_field :password_confirmation, :class => 'form-control', :placeholder => t("general.password_confirmation") %>
	       		<% if @o_single.errors[:password_confirmation].any? %>
	        		<span class="help-inline"><%= @o_single.errors[:password_confirmation].first %></span>
	      		<% end %>
	        </div>
	    </div>


		    <div class="control-group form-action">
		    	<label class='control-label'>&nbsp;</label>
		    	<div class="form-group">
	          <%= f.submit t("general.change_password"), :class => 'btn btn-warning btn-lg' %>
	          <%= link_to t("general.cancel"), dashboard_url, :class => 'btn btn-warning btn-lg' %>	      	
		      </div>	
		    </div>


	<% end %>
</div>

