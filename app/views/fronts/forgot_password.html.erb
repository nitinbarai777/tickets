<div class="row mt centered">
	<div class="col-lg-6 col-lg-offset-3">
		<h1>
			<%= t("general.forgot_password") %>
		</h1>
	</div>
</div>
<div class="col-lg-12">

	<% p_path = @current_company ? forgot_password_path(@current_company.sub_domain) : admin_forgot_password_path %>
	
	<%= form_for @user, :url => p_path, :html => { :class => 'form-horizontal' } do |f| %>
	  <div class="control-group">
	    <div class="form-group">
	      <% if flash[:forgot_pass_error] %>
	      	<span class="alert fade in alert-warning"><%= flash[:forgot_pass_error] %></span>
	  		<% end %>
	    </div>
	  </div>
	
	  <div class="control-group">
	    <div class="form-group">
	      <%= f.text_field :email, :class => 'form-control', :placeholder => 'Email' %>
	    </div>
	  </div>
	
    <div class="form-action control-group">
    	<div class="form-group">
      	<%= f.submit t("general.reset_password"), :class => 'btn btn-warning btn-lg' %>
      </div>	
    </div>	
	    
	<% end %>
</div>