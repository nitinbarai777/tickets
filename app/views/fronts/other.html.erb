<% if @o_single %>
	<div class="row mt centered">
		<div class="col-lg-6 col-lg-offset-3">
			<h1>
				<%= @o_single.name %>
			</h1>
		</div>
	</div>
	<div class="col-lg-12">
		<p><%= @o_single.content.html_safe unless @o_single.content.blank? %></p>
	</div>	
<% else %>
	<div class="row mt centered">
		<div class="col-lg-6 col-lg-offset-3">
			<h1>
				<%= t("page_not_found") %>
			</h1>
		</div>
	</div>
	<div class="col-lg-12">
		<p><%= t("page_not_found") %></p>
	</div>	
<% end %>