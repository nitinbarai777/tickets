<div class="row mt centered">
	<div class="col-lg-6 col-lg-offset-3">
		<h1>
			<%= t("general.company_profile") %>
		</h1>
	</div>
</div>
<div class="col-lg-12">
	<%= form_for @current_company, :url => company_profile_path, :html => { :class => 'form-inline' } do |f| %>
	    <div class="control-group">
	      <%= f.label :name, :class => 'control-label' %><span class="redStart">*</span>
	      <div class="form-group">
	        <%= f.text_field :name, :class => 'form-control' %>
	       	<% if @current_company.errors[:name].any? %>
	        	<span class="text-error text-message"><%= @current_company.errors[:name].first %></span>
	      	<% end %>        
	      </div>
	    </div>
	
	    <div class="control-group">
	      <%= f.label :business_type, :class => 'control-label' %><span class="redStart">&nbsp;</span>
	      <div class="form-group">
	        <%= f.text_field :business_type, :class => 'form-control' %>
	      </div>
	    </div>
	
	    <div class="control-group">
	      <%= f.label :email, :class => 'control-label' %><span class="redStart">*</span>
	      <div class="form-group">
	        <%= f.text_field :email, :class => 'form-control' %>
	       	<% if @current_company.errors[:email].any? %>
	        	<span class="text-error text-message"><%= @current_company.errors[:email].first %></span>
	      	<% end %>
	      </div>
	    </div>
	
	    <div class="control-group">
	      <%= f.label :sub_domain, :class => 'control-label' %><span class="redStart">*</span>
	      <div class="form-group">
	        <%= f.text_field :sub_domain, :class => 'form-control' %>
	       	<% if @current_company.errors[:sub_domain].any? %>
	        	<span class="text-error text-message"><%= @current_company.errors[:sub_domain].first %></span>
	      	<% end %>
	      </div>
	    </div>
	    
	    <div class="control-group">
	      <%= f.label :url, :class => 'control-label' %><span class="redStart">*</span>
	      <div class="form-group">
	        <%= f.text_field :url, :class => 'form-control' %>
	       	<% if @current_company.errors[:url].any? %>
	        	<span class="text-error text-message"><%= @current_company.errors[:url].first %></span>
	      	<% end %>
	      </div>
	    </div>  
	    
	    <div class="control-group">
	      <%= f.label :phone, :class => 'control-label' %><span class="redStart">&nbsp;</span>
	      <div class="form-group">
	        <%= f.text_field :phone, :class => 'form-control' %>
	      </div>
	    </div>      
	
	    <div class="control-group">
	      <%= f.label :mobile, :class => 'control-label' %><span class="redStart">&nbsp;</span>
	      <div class="form-group">
	        <%= f.text_field :mobile, :class => 'form-control' %>
	      </div>
	    </div>  
	    
	    <div class="control-group">
	      <%= f.label :address, :class => 'control-label' %><span class="redStart">&nbsp;</span>
	      <div class="form-group">
	        <%= f.text_field :address, :class => 'form-control' %>
	      </div>
	    </div>     
	
	    <div class="control-group">
	        <%= f.label :logo, :class => 'control-label' %><span class="redStart">&nbsp;</span>
	        <div class="form-group">
	            <%= f.file_field :logo, :class => 'form-control' %>
	        </div>
	    </div>
	    
	    <% if @current_company.logo? %>
	        <div class="control-group">
	        	<label class="control-label">&nbsp;</label><span class="redStart">&nbsp;</span>
	        	<div class="form-group">
	        	<%= image_tag @current_company.logo_url(:logo) %>
	        	</div>
	        </div>
	    <% end %>
	    
		    <div class="control-group form-action">
		    	<label class='control-label'>&nbsp;</label>
		    	<div class="form-group">
	          <%= f.submit t("general.save"), :class => 'btn btn-warning btn-lg' %>
	          <%= link_to t("general.cancel"), dashboard_url, :class => 'btn btn-warning btn-lg' %>	      	
		      </div>	
		    </div>    	    
	    
	<% end %>

</div>

