<div class="page-header">
	<h4>
		<h4><%= t("general.contact_us") %></h4>
	</h4>
</div>
<div class="container pt60">
<%= form_for @o_single, :url => contact_us_path, :html => { :class => 'form-horizontal' } do |f| %>


    <div class="control-group">
      <div class="controls">
        <%= f.text_field :name, :class => 'input-xlarge', :placeholder => 'Your Name' %>
       	<% if @o_single.errors[:name].any? %>
        	<span class="text-error text-message"><%= @o_single.errors[:name].first %></span>
      	<% end %>        
      </div>
    </div>
    
    <div class="control-group">
      <div class="controls">
        <%= f.text_field :email, :class => 'input-xlarge', :placeholder => 'Your Email' %>
       	<% if @o_single.errors[:email].any? %>
        	<span class="text-error text-message"><%= @o_single.errors[:email].first %></span>
      	<% end %>                
      </div>
    </div>
    	
    <div class="control-group">
    	<div class="controls">
    	<%= t("general.type_your_msg_here") %>
    	<div class="clearBoth"></div>    	
    	<%= f.text_area :message, :class => 'textArea wysihtml5' %>
    	</div>
    </div>


    <div class="form-actions">
      <%= f.submit t("general.send"), :class => 'btn ' %>
    </div>
    

<% end %>
</div>

<script type="text/javascript">
	$(document).on('page:load', function(){
	  window['rangy'].initialized = false
	})
  $(document).ready(function(){

    $('.wysihtml5').each(function(i, elem) {
      $(elem).wysihtml5();
    });

  })
</script>