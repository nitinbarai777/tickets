<h3>Ticket Replies</h3>

<% if @ticket_replies.count > 0 %>
	<table class="table table-striped">
	  <% @ticket_replies.each do |t| %>
	  
			<tr>
				<td>
					
	      	<div class="fr"><%= t.user.name.humanize %> - <%= t.created_at.to_s(:pretty_view) %></div>
	      	<div class="cl">&nbsp;</div>
	      	<p><%= t.description %></p>
	      </td>
	   </tr>
	    
	  <% end %>
	</table>  
<% end %>
