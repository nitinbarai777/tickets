<% if @ticket %>

<div class="row-fluid show-grid">
  <div class="span12">

<fieldset class="scheduler-border">
    <legend class="scheduler-border">Ticket Information</legend>
    		<table class="table">
    			<tr><td>Ticket ID:</td><td><%= @ticket.ticket_secret %></td><td width="40%">&nbsp;</td><td>Ticket Type:</td><td><%= @ticket.ticket_type %></td></tr>
    			
    			<tr><td>Priority:</td><td><%= ticket_priority_hash[@ticket.priority_id.to_s] %></td><td width="40%">&nbsp;</td><td>Status:</td><td><%= ticket_status_hash[@ticket.status_id.to_s] %></td></tr>
    		</table>	  
</fieldset>    	
			  
<fieldset class="scheduler-border">
    <legend class="scheduler-border"><%= @ticket.subject %></legend>
				  <p><%= @ticket.description.html_safe if @ticket.description %></p>
	      	<% if @ticket.attached_file.present? %>
						<fieldset class="scheduler-border">
						    <legend class="scheduler-border">Attachments</legend>	      	
	      				<%= link_to @ticket.attached_file.path.split("/").last, download_path(@ticket.id, 'ticket'), :style => 'text-decoration: underline; color:#000;' %>
	      		</fieldset>		
	      	<% end %>    
</fieldset>    

	  
<fieldset class="scheduler-border">
    <legend class="scheduler-border">Conversation</legend>	  
		  <div id="ticket-replies-list">
		    <%= render partial: 'ticket_reply_list' %>
		  </div>
</fieldset>
	  
 	</div> 
</div>


<% else %>

<fieldset class="scheduler-border">
    <legend class="scheduler-border">Ticket not found</legend>
		Ticket is not exists in the system.	  
</fieldset>    	

<% end %>

<script type="text/javascript">
	$(document).ready(function(){
		$("#ticket_reply_description").focus();
	});	
</script>

